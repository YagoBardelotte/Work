#: import NoTransition kivy.uix.screenmanager.NoTransition

<Gerenciador>:

    transition: NoTransition()

    Inicio:
        name:'inicio'

    Principal:
        name:'programa'

    Ajuda:
        name: 'help'

<Inicio>:

    FloatLayout:

        canvas:
            Color: 
                rgba: 0, 140, 255, 0.6
            Rectangle:
                size: self.size
                pos: self.pos
        
        id: main_program

        FloatLayout:
            id: tela1
            size: 800, 600

            Label:
                id: instrucoes
                text: 'ATENÇÃO! INSTRUÇÕES DE USO: \n\n Se for do grupo coopideal/rede local, \n especificar com _coop ou _rede no fim do nome do arquivo de balancete; \n\n O Balancete deve ser somente com os fornecedores; \n\n Todos os arquivos devem estar no formato .csv; \n\n As colunas principais que o programa utiliza devem seguir esse padrão de nome: \n\n     Razão Social, Valor Líquido, Valor Acréscimo, Valor Abatimento, \n\n     Data Pagamento, Observação, Nome Banco, Tipo Entrada; \n\n Qualquer problema não me procure.'
                pos: 10, 100
                font_size: 17
                bold: True

            Button:
                id: iniciar
                text: 'INICIAR'
                pos: 350, 150
                bold: True
                size_hint: .1, .06
                background_color: 1, 1, 1, 1
                on_release: app.root.current = 'programa'

<Principal>:

    GridLayout:

        canvas:
            Color: 
                rgba: 0, 140, 255, 0.6
            Rectangle:
                size: self.size
                pos: self.pos

        rows: 5

        ActionBar:  

            id: actBar
            pos_hint: {'top':1}
            background_color: 255, 200, 200, .6
         
            ActionView:         
                use_separator: True 
             
                ActionPrevious:
                    title: 'WM CONTABILIDADE'
                    bold: True
                    with_previous: False
                 
                ActionOverflow:

                ActionGroup:

                    ActionButton:
                        text: 'INSTRUÇÕES'
                        bold: True
                        on_press: app.root.current = 'help'

        BoxLayout:

            orientation: 'vertical'

            Label:
                text: 'PREENCHA OS CAMPOS ABAIXO'
                font_size: 35
                font_name: 'Arial'
                bold: True

        GridLayout:

            rows: 3
            cols: 3
            spacing: 10

            Label:
                text: 'Diretório do Balancete:'
                font_size: 17
                size: 230,30
                size_hint: None, None
                bold: True

            TextInput:
                id: cam_balancete
                multiline: False
                size_hint: None,None
                size: 400, 30
            
            Button:
                id: balancete_dir
                text: 'Buscar'
                bold: True
                size: 100,30
                size_hint: None, None
                on_press: root.get_path1()
            
            Label:
                text: 'Diretório do Relatório:'
                font_size: 17
                bold: True
                size: 230,30
                size_hint: None, None
            
            TextInput:
                id: cam_relatorio
                multiline: False
                size_hint: None,None
                size: 400, 30

            Button:
                id: relatorio_dir
                text: 'Buscar'
                bold: True
                size: 100,30
                size_hint: None, None
                on_press: root.get_path2()

        GridLayout:

            cols: 2
            spacing: 10

            Label:
                text: 'Codigo da conta de duplicatas:'
                font_size: 17
                size: 300,30
                bold: True
                size_hint: None,None

            TextInput:
                id: conta
                multiline: False
                font_size: 15
                size_hint: None,None
                size: 400, 30

            Label:
                text: 'Nome do arquivo do balancete:'
                font_size: 17
                size: 300,30
                bold: True
                size_hint: None,None

            TextInput:
                id: nome_balancete
                multiline: False
                size_hint: None,None
                size: 400, 30

            Label:
                text: 'Nome do arquivo do relatorio:'
                font_size: 17
                size: 300,30
                bold: True
                size_hint: None,None

            TextInput:
                id: nome_relatorio
                multiline: False
                size_hint: None,None
                size: 400, 30

        FloatLayout:
            
            Button:
                id: processar
                text: 'Processar arquivos'
                pos: 270,100
                bold: True
                size_hint: .2, .2
                on_release: root.processamento()
                on_press: root.iniciando()
            
            Button:
                id: limpar
                text: 'Limpar'
                pos: 450,100
                bold: True
                size_hint: .1, .2
                on_press: root.limpeza()

            Label:
                id: mensagem
                text: 'AGUARDANDO PARA INICIAR PROCESSAMENTO...'
                pos: 7,10
                bold: True
                
<Ajuda>:

    canvas:
        Color: 
            rgba: 0, 140, 255, 0.6
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        Label:
            text: 'ATENÇÃO! INSTRUÇÕES DE USO: \n\n Se for do grupo coopideal/rede local, \n especificar com _coop ou _rede no fim do nome do arquivo de balancete; \n\n O Balancete deve ser somente com os fornecedores; \n\n Todos os arquivos devem estar no formato .csv; \n\n As colunas principais que o programa utiliza devem seguir esse padrão de nome: \n\n     Razão Social, Valor Líquido, Valor Acréscimo, Valor Abatimento, \n\n     Data Pagamento, Observação, Nome Banco, Tipo Entrada; \n\n Qualquer problema não me procure.'
            pos: 10, 100
            font_size: 17
            bold: True
        
        Button:
            text: 'RETORNAR'
            pos: 350, 150
            bold: True
            size_hint: .1, .06
            background_color: 1, 1, 1, 1
            on_press: app.root.current = 'programa'